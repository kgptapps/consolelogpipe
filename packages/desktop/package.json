{
  "name": "@console-log-pipe/desktop",
  "version": "1.0.0",
  "description": "Desktop application for Console Log Pipe - Electron-based log viewer",
  "main": "src/main/main.js",
  "files": [
    "src",
    "build",
    "assets",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kgptapps/consolelogpipe.git",
    "directory": "packages/desktop"
  },
  "author": "kgptapps",
  "license": "MIT",
  "homepage": "https://github.com/kgptapps/consolelogpipe/tree/main/packages/desktop#readme",
  "bugs": {
    "url": "https://github.com/kgptapps/consolelogpipe/issues"
  },
  "keywords": [
    "console",
    "logging",
    "desktop",
    "electron",
    "gui",
    "real-time"
  ],
  "scripts": {
    "start": "electron src/main/main.js",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "nodemon --exec electron src/main/main.js",
    "dev:renderer": "webpack serve --config build/webpack.renderer.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config build/webpack.main.js",
    "build:renderer": "webpack --config build/webpack.renderer.js",
    "build:all": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "clean": "rimraf dist build/dist node_modules/.cache"
  },
  "dependencies": {
    "electron-updater": "^6.1.1",
    "electron-store": "^8.1.0",
    "electron-log": "^4.4.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "concurrently": "^8.2.0",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.43.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.kgptapps.console-log-pipe",
    "productName": "Console Log Pipe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
