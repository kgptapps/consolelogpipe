{
  "name": "console-log-pipe-monorepo",
  "version": "2.3.3",
  "description": "Browser Console Log Pipe - Real-time log streaming from browsers to developers",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/kgptapps/consolelogpipe.git"
  },
  "author": "kgptapps",
  "license": "MIT",
  "homepage": "https://github.com/kgptapps/consolelogpipe#readme",
  "bugs": {
    "url": "https://github.com/kgptapps/consolelogpipe/issues"
  },
  "keywords": [
    "console",
    "logging",
    "debugging",
    "browser",
    "real-time",
    "streaming",
    "developer-tools"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm test -- --passWithNoTests && npm run test:integration -- --passWithNoTests",
    "test:integration": "jest --config tests/integration/jest.config.js",
    "test:unit": "jest --testPathPattern='.*\\.test\\.(js|ts)$'",
    "test:changed": "jest --onlyChanged --passWithNoTests",
    "test:e2e": "echo 'E2E tests not yet implemented'",
    "test:performance": "echo 'Performance tests not yet implemented'",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "docs:generate": "echo 'Documentation generation not yet implemented'",
    "docs:update": "scripts/update-docs.sh",
    "docs:preview": "scripts/update-docs.sh --dry-run",
    "security:audit": "npm audit --audit-level=moderate",
    "ci:check": "node scripts/check-github-actions.js",
    "ci:status": "node scripts/check-github-actions.js",
    "ci:validate": "node scripts/validate-github-actions.js",
    "ci:audit-actions": "node scripts/validate-github-actions.js",
    "ci:fix": "node scripts/validate-github-actions.js --fix",
    "clean": "lerna clean && rimraf node_modules coverage",
    "version": "lerna version",
    "publish": "lerna publish",
    "release": "node scripts/create-release.js",
    "release:minor": "node scripts/create-release.js minor",
    "release:major": "node scripts/create-release.js major",
    "dev": "lerna run dev --parallel",
    "start": "lerna run start --parallel",
    "precommit": "npm run precommit:full",
    "precommit:full": "npm run precommit:lint && npm run precommit:types && npm run precommit:tests && npm run precommit:security",
    "precommit:lint": "lint-staged",
    "precommit:types": "npm run type-check",
    "precommit:tests": "npm run test:changed",
    "precommit:security": "npm audit --audit-level=high",
    "quality:check": "npm run lint && npm run type-check && npm run format:check && npm run test:all",
    "quality:fix": "npm run lint:fix && npm run format && npm run test:all",
    "quality:full": "npm run quality:check && npm run test:coverage && npm audit --audit-level=high",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lerna": "^8.2.3",
    "lint-staged": "^13.2.3",
    "node-fetch": "^2.6.12",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "ws": "^8.18.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "electron": "37.2.1",
    "webpack-dev-server": "5.2.2"
  }
}
